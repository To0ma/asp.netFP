@model YtBookStore.Models.Domain.Author
@{
	ViewData["Title"] = "Update";
}
<div class="container pt-5">
	<div class="row">
		<div class="col-md-6">
			<h3>Update Author</h3>
			<form asp-action="Update" method="post">
				<div class="form-group">
					@*<label asp-for="Id" hidden></label>*@
					<input type="hidden" hidden class="form-control" asp-for="Id" />
				</div>
				<div class="form-group">
					<label asp-for="AuthorName">*Author Name</label>
					<input type="text" class="form-control" asp-for="AuthorName" />
					<span asp-validation-for="AuthorName" class="text-danger"></span>
				</div>
				@*@if (TempData["msg"] != null)
				{
					<div class="form-group">
						@TempData["msg"]
					</div>
				}*@
				<div class="form-group pt-3">
					<button type="submit" class="btn btn-dark">Save</button>
					<a href="/Author/GetAll" class="btn btn-primary">List</a>
				</div>
			</form>
		</div>
	</div>
</div>
