@model IEnumerable<YtBookStore.Models.Domain.Author>
@{
	ViewData["Title"] = "Add";
}
<div class="container pt-5">
	<div class="row">
		<div class="col-md-6">
			@if (TempData["msg"] != null)
				{
					<div class="form-group">
						@TempData["msg"]
					</div>
				}
			<div class="col-md-6">
				<a class="btn btn-dark" href="/Author/Add">Add more</a>
			</div>
			<h3>List Author</h3>
			<table class="table table-stripped table-bordered table-dark">
				<thead>
					<tr>
						<th>Author Name</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.AuthorName</td>
							<td>
								<a class="btn btn-success" href="/Author/Update/@item.Id">Edit</a>
								<a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Author/Delete/@item.Id">Delete</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
