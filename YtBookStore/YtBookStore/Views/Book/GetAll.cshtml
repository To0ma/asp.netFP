@model IEnumerable<YtBookStore.Models.Domain.Book>
@{
	ViewData["Title"] = "Add";
}
<div class="container pt-5">
	<div class="row">
		<div class="col-md-6">
			@if (TempData["msg"] != null)
			{
				<div class="form-group">
					@TempData["msg"]
				</div>
			}
			<div class="col-md-6">
				<a class="btn btn-dark" href="/Book/Add">Add more</a>
			</div>
			<h3>List Book</h3>
			<table class="table table-stripped table-bordered table-dark">
				<thead>
					<tr>
						<th>Title</th>
						<th>Isbn</th>
						<th>Total Pages</th>
						<th>Author Name</th>
						<th>Publisher Name</th>
						<th>Genre Name</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Title</td>
							<td>@item.Isbn</td>
							<td>@item.TotalPages</td>
							<td>@item.Author.AuthorName</td>
							<td>@item.Publisher.PublisherName</td>
							<td>@item.Genre.Name</td>
							<td>
								<a class="btn btn-success" href="/Book/Update/@item.Id">Edit</a>
								<a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Book/Delete/@item.Id">Delete</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
